<UserControl x:Class="Shtirlitz.WPF.Informer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shtirlitz.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <Label x:Name="label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"
                       Content="{Binding Stage, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"/>
                <ProgressBar HorizontalAlignment="Stretch" Height="10" Margin="10,46,90,0" VerticalAlignment="Top" Width="Auto"
                             Minimum="0" Maximum="1" Value="{Binding Progress, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"/>
                <Button x:Name="button" Content="Cancel" HorizontalAlignment="Right" Margin="0,41,10,0" VerticalAlignment="Top" Width="75"
                        Command="{Binding CancelCommand, RelativeSource={RelativeSource TemplatedParent}, Mode=OneTime}"/>

            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
